---
import clsx from 'clsx';
const { image, title, imageLeft = false } = Astro.props;

const sectionClass = clsx('flex flex-col lg:flex-row items-center gap-12 py-2', { 'lg:flex-row-reverse': imageLeft });
---

<section class={sectionClass}>
    <!-- Texto: siempre primero en mÃ³vil (imagen debajo) -->
    <div class="w-full lg:w-1/2 px-4 lg:px-6" data-aos={imageLeft ? 'fade-left' : 'fade-right'} data-aos-delay="100">
        <h2 class="title-color mb-6 font-bold">{title}</h2>
        <div class="prose prose-lg leading-relaxed">
            <slot />
        </div>
    </div>

    <!-- Imagen: si pasas prop `image` la usa, si no puedes pasar un slot named "image" -->
    <div class="w-full lg:w-1/2" data-aos={imageLeft ? 'fade-right' : 'fade-left'} data-aos-delay="200">
        <slot name="image">
            {
                image ? (
                    <div class="relative group overflow-hidden rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-500 transform hover:scale-105">
                        <img
                            src={image.src || image}
                            alt={title}
                            class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-110"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500" />
                    </div>
                ) : null
            }
        </slot>
    </div>
</section>

<style>
    section {
        color: inherit;
    }

    .title-color {
        font-size: var(--text-h3);
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
    }

    .prose p {
        margin-bottom: 1.5rem;
    }

    /* Forzar columna en pantallas <= lg para asegurarnos que la imagen quede debajo */
    @media (max-width: 1024px) {
        section {
            flex-direction: column !important;
        }
    }
</style>
