---
import Button from '@components/ui/Button.astro';
import { Image } from 'astro:assets';

interface HeroContent {
    title: string;
    description: string;
    buttons?: {
        text: string;
        link: string;
        variant?: 'primary' | 'secondary' | 'ghostLight' | 'ghostDark';
        target?: string;
    }[];
    backgroundImage?: string | any; // Using any for now to handle both string paths and imported images
    overlayOpacity?: number; // Value between 0 and 1
    // When true, video will be mirrored horizontally (Tailwind class: -scale-x-100)
    horizontalMirror?: boolean;
}

interface Props {
    content: HeroContent;
}

const { content } = Astro.props;
const opacity = content.overlayOpacity ?? 1; // Default opacity if not specified
const mirrorClass = content.horizontalMirror ? '-scale-x-100' : '';
---

<section class="header-offset relative">
    {
        content.backgroundImage && (
            <div class="absolute inset-0 left-0 top-0 w-full h-full overflow-hidden">
                {content.backgroundImage &&
                typeof content.backgroundImage === 'object' &&
                content.backgroundImage.webm ? (
                    <video
                        autoplay
                        muted
                        loop
                        playsinline
                        poster={content.backgroundImage.poster}
                        id="bg-video"
                        class={`w-full h-full object-cover ${mirrorClass}`}
                        aria-hidden="true"
                    >
                        <source src={content.backgroundImage.webm} type="video/webm" />
                        <source src={content.backgroundImage.mp4} type="video/mp4" />
                    </video>
                ) : typeof content.backgroundImage === 'string' &&
                  (content.backgroundImage.endsWith('.webm') || content.backgroundImage.endsWith('.mp4')) ? (
                    <video
                                                src={content.backgroundImage}
                                                class={`w-full h-full object-cover ${mirrorClass}`}
                                                autoplay
                                                loop
                                                muted
                                                playsinline
                                        />
                ) : (
                    <Image
                        src={content.backgroundImage}
                        alt=""
                        width={1920}
                        height={1080}
                        class="w-full h-full object-cover"
                        quality={70}
                        format="webp"
                        loading="eager"
                        decoding="async"
                    />
                )}
                <div
                    class="hero-background absolute inset-0 left-0 top-0 w-full h-full overflow-hidden"
                    style={`opacity: ${opacity};`}
                />
            </div>
        )
    }

    <div
        class="site-container mx-auto px-4 sm:px-8 md:px-16 py-large relative z-10 flex flex-col md:items-start md:justify-center md:text-left"
    >
        <div class="md:max-w-2/3">
            <h1 class="text-white text-balance" data-aos="fade-up">
                {content.title}
            </h1>
            <p class="text-white mt-2 text-balance" data-aos="fade-up" data-aos-delay="100">
                {content.description}
            </p>

            {
                content.buttons && content.buttons.length > 0 && (
                    <div class="flex flex-wrap gap-4 mt-8" data-aos="fade-up">
                        {content.buttons.map((button) => (
                            <Button
                                href={button.link}
                                target={button.target || '_self'}
                                variant={button.variant || 'primary'}
                            >
                                {button.text}
                            </Button>
                        ))}
                    </div>
                )
            }
        </div>
    </div>
</section>
