---
import Contact from '@components/forms/Contact.astro';
import { siteConfig } from '@data/config';
import type { PaddingSize, ThemeColor } from '@utils/styleUtils';
import { COOL_TEXT_STYLE, getBackgroundColor, getPaddingClass, getTextColor } from '@utils/styleUtils';
import { Mail, MapPin, Phone } from 'lucide-astro';
export interface Props {
    content?: {
        title?: string;
        description?: string;
        contactInfo?: {
            email?: string;
            phone?: string;
            address?: string;
        };
    };
    background?: ThemeColor;
    padding?: PaddingSize;
    paddingTop?: PaddingSize;
    paddingBottom?: PaddingSize;
}
const { content, background = 'base', padding, paddingTop, paddingBottom } = Astro.props;

const bgColor = getBackgroundColor(background);
const textColor = getTextColor(background);
const paddingClass = getPaddingClass({ padding, paddingTop, paddingBottom });
---

<section class:list={[bgColor, paddingClass]}>
    <div class="container mx-auto px-4 space-y-24 lg:space-y-32 overflow-hidden">
        <!-- Contact Information Section -->
        <section data-aos="fade-up" data-aos-delay="200" class="mx-auto text-center relative">
            <div
                class="bg-white shadow-lg absolute inset-0 bg-gradient-to-r from-primary/5 to-secondary/5 rounded-3xl -z-10 lg:transform lg:rotate-1"
            >
            </div>
            <div class="px-8 py-12">
                <h2 class="title-color mb-8 font-bold">Información de contacto</h2>
                <p class:list={[textColor, 'text-lg leading-relaxed']}>
                    Estamos aquí para ayudarle con sus preguntas e inquietudes. No dude en contactarnos.
                </p>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-8" data-aos="fade-up" data-aos-delay="300">
                    <a
                        href={`mailto:${siteConfig.Socials.Email}`}
                        class:list={[
                            textColor,
                            'group block p-6 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/20 hover:bg-gradient-to-r hover:from-blue-500/20 hover:to-purple-600/20 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center',
                        ]}
                        data-aos="zoom-in"
                        data-aos-delay="400"
                    >
                        <div
                            class="flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r from-blue-500 to-purple-600 text-white group-hover:scale-110 transition-transform duration-300"
                        >
                            <Mail size={24} />
                        </div>
                        <div class="font-semibold mb-2">Correo electrónico</div>
                        <div class="text-sm opacity-90 hover:text-blue-400 transition-colors duration-200">
                            {siteConfig.Socials.Email}
                        </div>
                    </a>

                    <a
                        href={`tel:${siteConfig.Socials.Phone}`}
                        class:list={[
                            textColor,
                            'group block p-6 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/20 hover:bg-gradient-to-r hover:from-green-500/20 hover:to-teal-600/20 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center',
                        ]}
                        data-aos="zoom-in"
                        data-aos-delay="500"
                    >
                        <div
                            class="flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r from-green-500 to-teal-600 text-white group-hover:scale-110 transition-transform duration-300"
                        >
                            <Phone size={24} />
                        </div>
                        <div class="font-semibold mb-2">Teléfono</div>
                        <div class="text-sm opacity-90 hover:text-green-400 transition-colors duration-200">
                            {siteConfig.Socials.Phone}
                        </div>
                    </a>

                    <a
                        href={`https://maps.google.com/?q=${siteConfig.Socials.Location}`}
                        class:list={[
                            textColor,
                            'group block p-6 rounded-2xl bg-white/10 backdrop-blur-sm border border-white/20 hover:bg-gradient-to-r hover:from-orange-500/20 hover:to-red-600/20 hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl text-center',
                        ]}
                        data-aos="zoom-in"
                        data-aos-delay="600"
                    >
                        <div
                            class="flex items-center justify-center w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-r from-orange-500 to-red-600 text-white group-hover:scale-110 transition-transform duration-300"
                        >
                            <MapPin size={24} />
                        </div>
                        <div class="font-semibold mb-2">Ubicación</div>
                        <div class="text-sm opacity-90 hover:text-orange-400 transition-colors duration-200">
                            {siteConfig.Socials.Location}
                        </div>
                    </a>
                </div>
            </div>
        </section>

        <!-- Contact Form Section -->
        <section data-aos="fade-up" data-aos-delay="400" class="mx-auto text-center relative">
            <div
                class="bg-white shadow-lg absolute inset-0 bg-gradient-to-l from-primary/5 to-secondary/5 rounded-3xl -z-10 lg:transform lg:-rotate-1"
            >
            </div>
            <div class="py-12 px-4">
                <h2 class="px-8 title-color font-bold">Envíenos un mensaje</h2>
                <div class="form-container" data-aos="fade-up" data-aos-delay="500">
                    <script src="https://js-eu1.hsforms.net/forms/embed/147273914.js" defer></script>
                    <div
                        class="hs-form-frame"
                        data-region="eu1"
                        data-form-id="ba27f7cc-8271-4f29-bd9b-a0993919cc09"
                        data-portal-id="147273914"
                    >
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>

<style>
    .title-color {
        font-size: var(--text-h3);
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-weight: 700;
    }
</style>
