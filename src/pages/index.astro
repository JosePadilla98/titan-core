---
import Faqs from '@components/sections/Faqs.astro';
import Hero from '@components/sections/Hero.astro';
import Stats from '@components/sections/Stats.astro';
import Tabs from '@components/ui/Tabs.astro';
import { siteConfig } from '@data/config';
import { faqLists } from '@data/faqs';
import { electricalFeatures, photovoltaicFeatures } from '@data/features';
import image1 from '../assets/images/home/imageSection/electricidad.webp';
import image2 from '../assets/images/home/imageSection/casasolar.webp';

import Layout from '@layouts/Layout.astro';
import { GraduationCap, User, Settings, Leaf } from 'lucide-astro';
import heroImage from '../assets/images/home/header2.jpg';
import Carousel from '@components/ui/Carousel.astro';
import { getBackgroundColor } from '@utils/styleUtils';

const seoTitle = 'Instalaciones Eléctricas y Placas Solares';
const seoDescription =
    'Expertos en instalaciones eléctricas y placas solares. Servicios profesionales para hogares y empresas con los más altos estándares de calidad.';

const heroContent = {
    title: 'Expertos en instalaciones eléctricas y energía solar',
    description:
        'En Ampereon diseñamos, instalamos y mantenemos sistemas eléctricos y fotovoltaicos adaptados a cada cliente.',
    buttons: [
        {
            text: 'Solicitar presupuesto',
            link: `tel:${siteConfig.Socials.Phone}`,
            target: '_self',
        },
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2,
};

const servicesTabs = {
    eyebrow: 'NUESTROS SERVICIOS',
    title: 'Soluciones energéticas completas',
    description:
        'Ofrecemos un servicio integral para todas tus necesidades eléctricas y de energía solar, con la máxima calidad y garantía.',
    tabs: [
        {
            id: 'electrical',
            label: 'Instalaciones eléctricas',
            features: electricalFeatures,
            columns: 2,
        },
        {
            id: 'photovoltaic',
            label: 'Energía solar',
            features: photovoltaicFeatures,
        },
    ],
};

const iconStats = {
    title: '¿Por qué elegir Ampereon?',
    stats: [
        {
            label: 'Experiencia y formación técnica',
            icon: GraduationCap,
        },
        {
            label: 'Atención personalizada',
            icon: User,
        },
        {
            label: 'Instalaciones a medida',
            icon: Settings,
        },
        {
            label: 'Compromiso con la calidad y el ahorro energético',
            icon: Leaf,
        },
    ],
    // images: {
    //     image1: image1,
    //     image2: image2,
    // },
};

const faqsSection = {
    eyebrow: 'PREGUNTAS FRECUENTES',
    title: 'Resolvemos tus dudas',
    description: 'Encuentra respuestas a las preguntas más comunes sobre instalaciones eléctricas y placas solares.',
    tabs: [
        {
            id: 'electricity',
            label: 'Instalaciones Eléctricas',
            faqs: faqLists.electricity.faqs,
        },
        {
            id: 'solar',
            label: 'Energía Solar',
            faqs: faqLists.solar.faqs,
        },
    ],
};

const FooterCta = {
    title: '¿Necesitas una instalación eléctrica o solar de confianza?',
    description: 'En Ampereon te asesoramos sin compromiso.',
    hideCta: false,
    button: {
        text: 'Contactar ahora',
        link: '/contact',
        target: '_self',
    },
    postBtnDescription: '',
};

const media = [
    {
        src: '/images/postersolar.webp',
        alt: 'Instalación solar',
        type: 'image' as const,
    },
    {
        src: 'src/assets/images/home/imageSection/electricidad.webp',
        alt: 'Triangle',
        type: 'image' as const,
    },
    {
        src: 'src/assets/images/home/imageSection/casasolar.webp',
        alt: 'Logo',
        type: 'image' as const,
    },
];
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Tabs content={servicesTabs} padding="base" background="base" />
    <Stats content={iconStats} background="dark" className="pt-24 pb-32">
        <div class="mt-20">
            <div class="text-center mb-12">
                <h3 class="text-secondary font-light text-2xl lg:text-3xl">Nuestras instalaciones:</h3>
            </div>
            <Carousel {media} class="max-w-4xl mx-auto" />
        </div>
    </Stats>

    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>
