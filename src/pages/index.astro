---
import Faqs from '@components/sections/Faqs.astro';
import Hero from '@components/sections/Hero.astro';
import Stats from '@components/sections/Stats.astro';
import Tabs from '@components/ui/Tabs.astro';
import { faqLists } from '@data/faqs';
import { electricalFeatures, photovoltaicFeatures } from '@data/features';

import CarouselWithThumbnails from '@components/ui/CarouselWithThumbnails.astro';
import Layout from '@layouts/Layout.astro';
import { GraduationCap, Leaf, Settings, Sun, User, Zap } from 'lucide-astro';

// Electrical carousel images
import electrical1 from '../assets/images/instalaciones-electricas/carousel/1.jpeg';
import electrical2 from '../assets/images/instalaciones-electricas/carousel/2.jpeg';
import electrical3 from '../assets/images/instalaciones-electricas/carousel/3.jpeg';
import electrical4 from '../assets/images/instalaciones-electricas/carousel/4.jpeg';
import electrical5 from '../assets/images/instalaciones-electricas/carousel/5.jpeg';
import electrical6 from '../assets/images/instalaciones-electricas/carousel/6.jpeg';
import electrical7 from '../assets/images/instalaciones-electricas/carousel/7.jpeg';
import electrical8 from '../assets/images/instalaciones-electricas/carousel/8.jpeg';

// Photovoltaic carousel images
import photovoltaic1 from '../assets/images/instalaciones-fotovoltaicas/carousel/1.jpg';
import photovoltaic2 from '../assets/images/instalaciones-fotovoltaicas/carousel/2.jpg';
import photovoltaic3 from '../assets/images/instalaciones-fotovoltaicas/carousel/3.jpg';
import photovoltaic4 from '../assets/images/instalaciones-fotovoltaicas/carousel/4.jpg';
import photovoltaic5 from '../assets/images/instalaciones-fotovoltaicas/carousel/5.jpg';
import photovoltaic6 from '../assets/images/instalaciones-fotovoltaicas/carousel/6.jpg';
import photovoltaic7 from '../assets/images/instalaciones-fotovoltaicas/carousel/7.jpg';
import photovoltaic8 from '../assets/images/instalaciones-fotovoltaicas/carousel/8.jpg';

import mp4 from '../assets/images/home/header.mp4';
import webm from '../assets/images/home/header.webm';

const seoTitle = 'Instalaciones Eléctricas y Placas Solares';
const seoDescription =
    'Expertos en instalaciones eléctricas y placas solares. Servicios profesionales para hogares y empresas con los más altos estándares de calidad.';

const heroContent = {
    title: 'Expertos en instalaciones eléctricas y energía solar',
    description:
        'En Ampereon diseñamos, instalamos y mantenemos sistemas eléctricos y fotovoltaicos adaptados a cada cliente.',
    buttons: [
        {
            text: 'Contactar ahora',
            link: '/contact',
            target: '_self',
        },
    ],
    backgroundImage: { poster: '/images/posterhome.jpg', webm, mp4 },
    overlayOpacity: 0,
    horizontalMirror: true,
};

const servicesTabs = {
    eyebrow: 'NUESTROS SERVICIOS',
    title: 'Soluciones energéticas completas',
    description:
        'Ofrecemos un servicio integral para todas tus necesidades eléctricas y de energía solar, con la máxima calidad y garantía.',
    tabs: [
        {
            id: 'electrical',
            label: 'Instalaciones eléctricas',
            features: electricalFeatures,
            columns: 2,
        },
        {
            id: 'photovoltaic',
            label: 'Energía solar',
            features: photovoltaicFeatures,
        },
    ],
};

const iconStats = {
    title: '¿Por qué elegir Ampereon?',
    stats: [
        {
            label: 'Experiencia y formación técnica',
            icon: GraduationCap,
        },
        {
            label: 'Atención personalizada',
            icon: User,
        },
        {
            label: 'Instalaciones a medida',
            icon: Settings,
        },
        {
            label: 'Compromiso con la calidad y el ahorro energético',
            icon: Leaf,
        },
    ],
    // images: {
    //     image1: image1,
    //     image2: image2,
    // },
};

const faqsSection = {
    eyebrow: 'PREGUNTAS FRECUENTES',
    title: 'Resolvemos tus dudas',
    description: 'Encuentra respuestas a las preguntas más comunes sobre instalaciones eléctricas y placas solares.',
    tabs: [
        {
            id: 'electricity',
            label: 'Instalaciones Eléctricas',
            faqs: faqLists.electricity.faqs,
        },
        {
            id: 'solar',
            label: 'Energía Solar',
            faqs: faqLists.solar.faqs,
        },
    ],
};

const FooterCta = {
    title: '¿Necesitas una instalación eléctrica o solar de confianza?',
    description: 'En Ampereon te asesoramos sin compromiso.',
    hideCta: false,
    button: {
        text: 'Contactar ahora',
        link: '/contact',
        target: '_self',
    },
    postBtnDescription: '',
};

const mediaElectrical = [
    {
        src: electrical1.src,
        alt: 'Instalación eléctrica 1',
        type: 'image' as const,
    },
    {
        src: electrical2.src,
        alt: 'Instalación eléctrica 2',
        type: 'image' as const,
    },
    {
        src: electrical3.src,
        alt: 'Instalación eléctrica 3',
        type: 'image' as const,
    },
    {
        src: electrical4.src,
        alt: 'Instalación eléctrica 4',
        type: 'image' as const,
    },
    {
        src: electrical5.src,
        alt: 'Instalación eléctrica 5',
        type: 'image' as const,
    },
    {
        src: electrical6.src,
        alt: 'Instalación eléctrica 6',
        type: 'image' as const,
    },
    {
        src: electrical7.src,
        alt: 'Instalación eléctrica 7',
        type: 'image' as const,
    },
    {
        src: electrical8.src,
        alt: 'Instalación eléctrica 8',
        type: 'image' as const,
    },
];

const mediaPhotovoltaic = [
    {
        src: photovoltaic1.src,
        alt: 'Instalación fotovoltaica 1',
        type: 'image' as const,
    },
    {
        src: photovoltaic2.src,
        alt: 'Instalación fotovoltaica 2',
        type: 'image' as const,
    },
    {
        src: photovoltaic3.src,
        alt: 'Instalación fotovoltaica 3',
        type: 'image' as const,
    },
    {
        src: photovoltaic4.src,
        alt: 'Instalación fotovoltaica 4',
        type: 'image' as const,
    },
    {
        src: photovoltaic5.src,
        alt: 'Instalación fotovoltaica 5',
        type: 'image' as const,
    },
    {
        src: photovoltaic6.src,
        alt: 'Instalación fotovoltaica 6',
        type: 'image' as const,
    },
    {
        src: photovoltaic7.src,
        alt: 'Instalación fotovoltaica 7',
        type: 'image' as const,
    },
    {
        src: photovoltaic8.src,
        alt: 'Instalación fotovoltaica 8',
        type: 'image' as const,
    },
];
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Tabs content={servicesTabs} padding="base" background="base" paddingTop="small" />
    <Stats content={iconStats} background="dark" className="pt-24 pb-32">
        <div class="mt-20" data-aos="fade-up">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mx-10 md:mx-28">
                <div class="text-center" data-aos="fade-in-left" data-aos-duration="800" data-aos-delay="200">
                    <div
                        class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full mb-4 shadow-lg mx-auto"
                        data-aos="zoom-in"
                        data-aos-delay="400"
                    >
                        <Zap class="w-8 h-8 text-white" />
                    </div>
                    <h4 class="text-white font-semibold text-xl mb-6" data-aos="fade-up" data-aos-delay="500">
                        Instalaciones Eléctricas
                    </h4>
                    <div data-aos="fade-up" class="flex items-end" data-aos-delay="800">
                        <CarouselWithThumbnails media={mediaElectrical} />
                    </div>
                </div>

                {/* Las clases de lg: las pongo para arreglar el padding que se ve mal */}
                <div
                    class="text-center lg:flex lg:flex-col lg:justify-between"
                    data-aos="fade-in-right"
                    data-aos-duration="800"
                    data-aos-delay="250"
                >
                    <div>
                        <div
                            class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-yellow-500 to-orange-500 rounded-full mb-4 shadow-lg mx-auto"
                            data-aos="zoom-in"
                            data-aos-delay="600"
                        >
                            <Sun class="w-8 h-8 text-white" />
                        </div>
                        <h4 class="text-white font-semibold text-xl mb-6" data-aos="fade-up" data-aos-delay="550">
                            Instalaciones Fotovoltaicas
                        </h4>
                    </div>
                    <div class="flex items-end" data-aos="fade-up" data-aos-delay="1000">
                        <CarouselWithThumbnails media={mediaPhotovoltaic} />
                    </div>
                </div>
            </div>
        </div>
    </Stats>

    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>
