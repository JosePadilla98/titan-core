---
import Faqs from '@components/sections/Faqs.astro';
import Features from '@components/sections/Features.astro';
import Hero from '@components/sections/Hero.astro';
import Stats from '@components/sections/Stats.astro';
import { faqLists } from '@data/faqs';
import { featureLists } from '@data/features';
import { statsLists } from '@data/stats';
import Layout from '@layouts/Layout.astro';
import heroImage from '../assets/images/home/default-hero-2.jpg';

const seoTitle = "Instalaciones Eléctricas y Placas Solares";
const seoDescription = "Expertos en instalaciones eléctricas y placas solares. Servicios profesionales para hogares y empresas con los más altos estándares de calidad.";

const heroContent = {
    title: 'Expertos en Instalaciones Eléctricas y Energía Solar',
    description: 'Ofrecemos servicios profesionales de instalación eléctrica y placas solares para hogares y empresas. Calidad garantizada, ahorro energético y soluciones sostenibles.',
    buttons: [
        // {
        //     text: 'Solicitar Presupuesto',
        //     link: '/contact',
        //     target: '_self'
        // },
        {
            text: 'Llamar Ahora',
            link: 'tel:+34644396495',
            target: '_self'
        }
    ],
    backgroundImage: heroImage,
    overlayOpacity: 0.2
}

const featuresSection = {
    eyebrow: "NUESTROS SERVICIOS",
    title: "Soluciones Energéticas Completas",
    description: "Ofrecemos un servicio integral para todas tus necesidades eléctricas y de energía solar, con la máxima calidad y garantía.",
    features: featureLists.main.features,
    // button: {
    //     text: "Ver Todos los Servicios",
    //     link: "/contact",
    //     variant: "primary" as const
    // }
}

const FooterCta = {
    eyebrow: "¿Necesitas Ayuda?",
    title: 'Contacta con Nuestros Expertos',
    description: 'Estamos aquí para ayudarte con cualquier consulta sobre instalaciones eléctricas o energía solar. Presupuestos sin compromiso.',
    hideCta: false,
    button: {
        text: 'Contactar Ahora',
        link: '/contact',
        target: '_self'
    }
}

const sideBySideStats = {
    eyebrow: "NUESTROS RESULTADOS",
    title: "Experiencia y Confianza",
    description: "Llevamos años proporcionando soluciones energéticas de calidad a nuestros clientes, con resultados que hablan por sí mismos.",
    variant: 'side-by-side' as const,
    stats: statsLists.withContent.stats,
    content: {
        title: "Por Qué Elegirnos",
        description: "Profesionales certificados, materiales de primera calidad y atención personalizada. Tu satisfacción es nuestra prioridad.",
        // button: {
        //     text: "Conoce Más",
        //     link: "/contact",
        //     variant: "primary" as const
        // }
    }
};

const faqsSection = {
    eyebrow: "PREGUNTAS FRECUENTES",
    title: 'Resolvemos Tus Dudas',
    description: 'Encuentra respuestas a las preguntas más comunes sobre instalaciones eléctricas y placas solares.',
    faqs: faqLists.main.faqs
}
---

<Layout footerCta={FooterCta} title={seoTitle} description={seoDescription}>
    <Hero content={heroContent} />
    <Features content={featuresSection} padding="base" background="light" />
    <Stats content={sideBySideStats} background='dark' padding="base"/>
    <Faqs content={faqsSection} background="base" padding="base" />
</Layout>
